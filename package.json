{
  "name": "scratchblocks2",
  "version": "0.1.0",
  "description": "A TypeScript rewrite of the original scratchblocks package",
  "keywords": [
    "scratchblocks",
    "scratch",
    "blocks"
  ],
  "homepage": "https://github.com/Ascor8522/scratchblocks2",
  "bugs": {
    "url": "https://github.com/Ascor8522/scratchblocks2/issues"
  },
  "license": "CC-BY-NC-SA-4.0",
  "contributors": [
    {
      "name": "Ascor8522",
      "url": "https://github.com/Ascor8522"
    }
  ],
  "funding": [],
  "main": "lib/dist/scratchblocks2.js",
  "types": "lib/types",
  "directories": {
    "doc": "docs"
  },
  "repository": "github:Ascor8522/scratchblocks2",
  "scripts": {
    "lambda-clean": "rm -rf lambda/build",
    "lambda-compile-watch": "npx tsc --project lambda --watch",
    "lambda-compile": "npx tsc --project lambda",

    "lib-clean": "rm -rf lib/build lib/dist lib/types",
    "lib-bundle-watch": "npx rollup --watch --input lib/build/index.js --file lib/dist/scratchblocks2.js --format es --name scratchblocks2",
    "lib-bundle": "npx rollup --input lib/build/index.js --file lib/dist/scratchblocks2.js --format es --name scratchblocks2",
    "lib-compile-watch": "npx tsc --project lib --watch",
    "lib-compile": "npx tsc --project lib",

    "tests-compile-watch": "",
    "tests-compile": "",
    "tests-run": "",

    "docs-compile-watch": "npx tsc --project docs --watch",
    "docs-compile": "npx tsc --project docs",
    "docs-serve-watch": "bundle exec jekyll serve --baseurl '' --incremental --force_polling",
    "docs-serve": "bundle exec jekyll serve --baseurl '' --no-watch",
    
    "start": "npm run-script docs-serve"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.9.0",
    "chai": "^4.3.4",
    "mocha": "^9.1.1",
    "rollup": "^2.56.3",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2"
  }
}
