{
	"compilerOptions": {
		"target": "esnext",
		"module": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"strict": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"removeComments": true,
		"outDir": "build",
		"declaration": true,
		"declarationDir": "types",
		"baseUrl": ".",
	},
	"typeAcquisition": {
		"enable": true
	},
	"include": [
		"src/**/*"
	]
}
